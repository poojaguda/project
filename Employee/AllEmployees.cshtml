@model List<EmployeeLib.DataClasses.Employee>
@{ 
    ViewBag.Title = "Index";
    var options = new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "divArea"
    };
}
<div>
    <table border="1">
      <tr>
          <th>Employee Id</th>
          <th>Employee Name</th>
          <th>Employee Address</th>
          <th>Employee Salary</th>
          <th>Dept Id</th>
          <th>Options</th>
      </tr>
        @foreach (var emp in Model)
        {
      <tr>
          <td>@emp.EmpId</td>
          <td>@emp.EmpName</td>
          <td>@emp.EmpAddress</td>
          <td>@emp.EmpSalary</td>
          <td>@emp.DeptId</td>
          <td>
              @Ajax.ActionLink("EDIT", "Update", new { id = emp.EmpId }, options, new { @class = "btn btn-info" })
              @Ajax.ActionLink("DELETE", "Delete", new { id = emp.EmpId }, options, new { @class = "btn btn-info" })
          </td>
          
       






      </tr>
        }

    </table>
</div>

